<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/commonColorPrimary</item>
        <item name="colorPrimaryDark">@color/commonColorPrimaryDark</item>
        <item name="colorAccent">@color/commonColorAccent</item>
    </style>
    <style name="SplashTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@drawable/logo_splash</item>
    </style>
    <style name="base_title_back_ui">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:src">@drawable/nav_icon_back</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">60dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>