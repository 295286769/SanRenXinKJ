<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:srx="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background_color"
    >

    <com.srx.huangweishui.common.view.HomeTabView
        android:id="@+id/homeTabView_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        srx:item_one_text="首页"
        srx:item_two_text="第二页"
        srx:item_three_text="第三页"
        srx:item_four_text="第四页"
        srx:base_tab_line_visble="true"
        srx:base_line_view_top_visible="true"
        />


    <FrameLayout
        android:id="@+id/fl_content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/homeTabView_main"
        android:background="@drawable/home_tab_bagroud"
        android:clickable="true"

        />

</RelativeLayout>